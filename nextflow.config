manifest {
  mainScript                = 'main.nf'
  name                      = 'Cecret'
  author                    = 'Erin Young'
  homePage                  = 'https://github.com/UPHL-BioNGS/Cecret'
  version                   = 'v.3.2.20220725'
}

//########## Setting the Profile ##########
profiles {
  docker {
    docker.enabled          = true
    docker.runOptions       = '-u \$(id -u):\$(id -g)'
  }
  singularity {
    singularity.enabled     = true
    singularity.autoMounts  = true
  }
  artic_V3 {
    params.primer_set       = 'ncov_V3'
  }
  artic_V4 {
    params.primer_set       = 'ncov_V4'
  }
  artic_V4_1 {
    params.primer_set       = 'ncov_V4.1'
  }
  sarscov2 {
    params.preset           = 'sarscov2'
  }
  mpx {
    params.preset           = 'mpx'
    params.trimmer          = 'none'
    params.minimum_depth    = 10
  }
  uphl {
    singularity.enabled     = true
    singularity.autoMounts  = true
    singularity.cacheDir    = 'singularity'
    params {
      kraken2               = true
      kraken2_db            = '/Volumes/IDGenomics_NAS/Data/kraken2_db/h+v'
    }
  }
}

includeConfig './configs/cecret_config_template.config'
