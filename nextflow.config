manifest {
  mainScript = 'Cecret.nf'
  name = 'Cecret'
  author = 'Erin Young'
  homePage = 'https://github.com/UPHL-BioNGS/Cecret'
}

//########## Setting the Profile ##########
profiles {

  docker {
    docker.enabled = true
    docker.runOptions = '-u \$(id -u):\$(id -g)'
    includeConfig 'configs/cecret_config_template.config'
  }

  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    includeConfig 'configs/cecret_config_template.config'
  }

}
